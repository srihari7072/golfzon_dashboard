<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_group_members_list" model="ir.ui.view">
        <field name="name">golf.group.member.list</field>
        <field name="model">golf.group.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="group_member_id"/>
                <field name="group_id"/>
                <field name="group_member_name"/>
                <field name="position_scd"/>
                <field name="person_code"/>
                <field name="member_cd_id"/>
                <field name="slim_in"/>
                <field name="mobile_phone"/>
                <field name="mobile_phone_idx"/>
                <field name="email"/>
                <field name="sms_in"/>
                <field name="remark"/>
                <field name="created_at"/>
                <field name="updated_at"/>
            </list>
        </field>
    </record>
    <record id="view_group_members_form" model="ir.ui.view">
        <field name="name">golf.group.member.form</field>
        <field name="model">golf.group.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="group_member_id"/>
                        <field name="group_id"/>
                        <field name="group_member_name"/>
                        <field name="position_scd"/>
                        <field name="person_code"/>
                        <field name="member_cd_id"/>
                        <field name="slim_in"/>
                    </group>
                    <group>
                        <field name="mobile_phone"/>
                        <field name="mobile_phone_idx"/>
                        <field name="email"/>
                        <field name="sms_in"/>
                        <field name="remark"/>
                    </group>
                    <group>
                        <field name="created_id"/>
                        <field name="created_at"/>
                        <field name="updated_id"/>
                        <field name="updated_at"/>
                        <field name="deleted_id"/>
                        <field name="deleted_at"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_group_members" model="ir.actions.act_window">
        <field name="name">Group Members</field>
        <field name="res_model">golf.group.member</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- <menuitem id="menu_golf_members" name="Group Members" action="action_group_members" parent="base.menu_administration" sequence="30"/> -->
    <menuitem id="menu_golf_members" name="Group Members" action="action_group_members" parent="menu_golf_root" sequence="30"/>
</odoo>