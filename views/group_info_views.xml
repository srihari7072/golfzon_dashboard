<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_group_info_list" model="ir.ui.view">
        <field name="name">golf.group.info.list</field>
        <field name="model">golf.group.info</field>
        <field name="arch" type="xml">
            <list>
                <field name="group_id"/>
                <field name="group_name"/>
                <field name="reg_date"/>
                <field name="expire_at"/>
                <field name="member_count"/>

                <field name="group_scd"/>
                <field name="state_scd"/>
                <field name="week_scd"/>
                <field name="course_cd_id"/>
                <field name="time_part_scd"/>

                <field name="nomember_count"/>
                <field name="group_psnlty"/>
                <field name="reg_date"/>
                <field name="remark"/>
                <field name="created_at"/>
                <field name="updated_at"/>
                <field name="deleted_at"/>
            </list>
        </field>
    </record>
    <record id="view_group_info_form" model="ir.ui.view">
        <field name="name">golf.group.info.form</field>
        <field name="model">golf.group.info</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="group_id"/>
                        <field name="group_name"/>
                        <field name="reg_date"/>
                        <field name="expire_at"/>
                        <field name="member_count"/>

                        <field name="group_scd"/>
                        <field name="state_scd"/>
                        <field name="week_scd"/>
                        <field name="course_cd_id"/>
                        <field name="time_part_scd"/>

                        <field name="nomember_count"/>
                        <field name="group_psnlty"/>
                        <field name="reg_date"/>
                        <field name="remark"/>
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="deleted_at"/>
                    </group>
                   
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_group_info" model="ir.actions.act_window">
        <field name="name">Groups</field>
        <field name="res_model">golf.group.info</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- Root menu: Omit parent for top-level -->
    <menuitem id="menu_golf_root" name="Golf Group member Management" sequence="10"/>
    <menuitem id="menu_golf_groups" name="Groups Infos" action="action_group_info" parent="menu_golf_root" sequence="10"/>
</odoo>

