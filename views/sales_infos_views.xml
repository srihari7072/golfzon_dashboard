<odoo>
    <!-- Tree View -->
    <record id="view_sales_infos_tree" model="ir.ui.view">
        <field name="name">sales.infos.list</field>
        <field name="model">sales.infos</field>
        <field name="arch" type="xml">
            <list>
                <field name="sales_info_id"/>
                <field name="slip_no"/>
                <field name="sale_date"/>
                <field name="customer_id"/>
                <field name="account_id"/>
                <field name="person_cnt"/>
                <field name="store_cd_id"/>
                <field name="table_clear_yn"/>
                <field name="sale_div_scd"/>
                <field name="created_at"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sales_infos_form" model="ir.ui.view">
        <field name="name">sales.infos.form</field>
        <field name="model">sales.infos</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sales_info_id"/>
                        <field name="slip_no"/>
                        <field name="sale_date"/>
                        <field name="customer_id"/>
                        <field name="account_id"/>
                        <field name="sale_div_scd"/>
                        <field name="table_clear_yn"/>
                    </group>
                    <group>
                        <field name="person_cnt"/>
                        <field name="store_cd_id"/>
                        <field name="store_table_id"/>
                        <field name="pos_no"/>
                        <field name="gc_gubun_scd"/>
                    </group>
                    <group>
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="deleted_at"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sales_infos" model="ir.actions.act_window">
        <field name="name">Sales Infos</field>
        <field name="res_model">sales.infos</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_sales_root" name="Sales"/>
    <menuitem id="menu_sales_infos"
              name="Sales Infos"
              parent="menu_sales_root"
              action="action_sales_infos"/>
</odoo>
