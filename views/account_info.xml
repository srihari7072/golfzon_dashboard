<odoo>
    <!-- List View -->
    <record id="view_account_infos_list" model="ir.ui.view">
        <field name="name">account.infos.list</field>
        <field name="model">account.infos</field>
        <field name="arch" type="xml">
            <list>
                <field name="account_id"/>
                <field name="membership_yn"/>
                <field name="round_term_cd_id"/>
                <field name="hole_count"/>
                <field name="average_time"/>
                <field name="transfer_fee"/>
                <field name="annual_fee"/>
                <field name="club_code"/>
                <field name="remarks"/>
                <field name="created_at"/>
                <field name="updated_at"/>
                <field name="deleted_at"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_account_infos_form" model="ir.ui.view">
        <field name="name">account.infos.form</field>
        <field name="model">account.infos</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="account_id"/>
                        <field name="membership_yn"/>
                        <field name="round_term_cd_id"/>
                        <field name="hole_count"/>
                        <field name="average_time"/>
                        <field name="transfer_fee"/>
                        <field name="annual_fee"/>
                        <field name="club_code"/>
                        <field name="remarks"/>
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="deleted_at"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_account_infos" model="ir.actions.act_window">
        <field name="name">Account Infos</field>
        <field name="res_model">account.infos</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_account_infos_root" name="Account Infos"/>
    <menuitem id="menu_account_infos" name="Manage Accounts"
              parent="menu_account_infos_root" action="action_account_infos"/>
</odoo>
