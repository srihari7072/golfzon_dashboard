<odoo>
    <!-- Tree View -->
    <record id="view_booking_info_tree" model="ir.ui.view">
        <field name="name">booking.info.list</field>
        <field name="model">booking.info</field>
        <field name="arch" type="xml">
            <list>
                <field name="bookg_info_id"/>
                <field name="bookg_name"/>
                <field name="contact_name"/>
                <field name="contact_mobile_phone"/>
                <field name="bookg_no"/>
                <field name="bookg_state_scd"/>
                <field name="play_team_cnt"/>
                <field name="play_player_cnt"/>
                <field name="sms1_yn"/>
                <field name="sms2_yn"/>
                <field name="created_at"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_booking_info_form" model="ir.ui.view">
        <field name="name">booking.info.form</field>
        <field name="model">booking.info</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="bookg_info_id"/>
                        <field name="bookg_name"/>
                        <field name="contact_name"/>
                        <field name="contact_mobile_phone"/>
                        <field name="bookg_no"/>
                        <field name="bookg_type_scd"/>
                        <field name="bookg_state_scd"/>
                        <field name="main_yn"/>
                        <field name="remark"/>
                        <field name="sms1_yn"/>
                        <field name="sms2_yn"/>
                    </group>
                    <group>
                        <field name="play_team_cnt"/>
                        <field name="play_player_cnt"/>
                        <field name="chnl_cd_id"/>
                        <field name="chnl_detail"/>
                        <field name="vendor_id"/>
                        <field name="pkg_bookg_info_id"/>
                    </group>
                    <group>
                        <field name="created_at"/>
                        <field name="updated_at"/>
                        <field name="deleted_at"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_booking_info" model="ir.actions.act_window">
        <field name="name">Booking Info</field>
        <field name="res_model">booking.info</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_booking_root" name="Bookings"/>
    <menuitem id="menu_booking_info"
              name="Booking Info"
              parent="menu_booking_root"
              action="action_booking_info"/>
</odoo>
