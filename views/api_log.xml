<odoo>
    <!-- List View -->
    <record id="view_api_log_list" model="ir.ui.view">
        <field name="name">api.log.list</field>
        <field name="model">api.log</field>
        <field name="arch" type="xml">
            <list string="API Logs">
                <field name="api_log_id"/>
                <field name="url"/>
                <field name="request"/>
                <field name="response"/>
                <field name="response_time"/>
                <field name="client_ip"/>
                <field name="created_at"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_api_log_form" model="ir.ui.view">
        <field name="name">api.log.form</field>
        <field name="model">api.log</field>
        <field name="arch" type="xml">
            <form string="API Log">
                <sheet>
                    <group>
                        <field name="api_log_id"/>
                        <field name="url"/>
                        <field name="request"/>
                        <field name="response"/>
                        <field name="response_time"/>
                        <field name="client_ip"/>
                        <field name="created_at"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_api_log" model="ir.actions.act_window">
        <field name="name">API Logs</field>
        <field name="res_model">api.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_api_log_root" name="API Logs"/>
    <menuitem id="menu_api_log_sub"
              name="Logs"
              parent="menu_api_log_root"
              action="action_api_log"/>
</odoo>
