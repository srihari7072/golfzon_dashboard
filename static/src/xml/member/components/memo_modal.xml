<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <!-- Member Memo Modal (Section 1.3 - Memo) -->
    <t t-name="golfzon_dashboard.MemoModal">
        <div class="modal-overlay" t-if="state.showMemoModal" t-on-click="closeMemoModal">
            <div class="modal-container memo-modal" t-on-click.stop="">
                
                <div class="modal-header">
                    <h3 class="modal-title">
                        <t t-if="isKorean()">회원 메모</t>
                        <t t-else="">Member Memo</t>
                    </h3>
                    <button 
                        type="button"
                        class="modal-close-btn" 
                        t-on-click="closeMemoModal"
                        aria-label="Close"
                    >×</button>
                </div>
                
                <div class="modal-body">
                    <!-- Memo Input Field -->
                    <form class="memo-input-section" autocomplete="off">
                        <label for="member-memo-input" class="visually-hidden">
                            <t t-if="isKorean()">메모 입력</t>
                            <t t-else="">Enter Memo</t>
                        </label>
                        <textarea 
                            id="member-memo-input"
                            name="memberMemo"
                            class="form-control memo-textarea"
                            t-att-placeholder="isKorean() ? '메모를 입력하세요' : 'Please enter a note'"
                            t-model="state.memoText"
                            rows="10"
                            autocomplete="off"
                        />
                    </form>
                    
                    <!-- Existing Memos List -->
                    <div class="existing-memos-section" t-if="state.existingMemos.length > 0">
                        <h4 class="memos-title">
                            <t t-if="isKorean()">기존 메모</t>
                            <t t-else="">Existing Memos</t>
                        </h4>
                        <div class="memo-list">
                            <t t-foreach="state.existingMemos" t-as="memo" t-key="memo.id">
                                <article class="memo-item">
                                    <div class="memo-header">
                                        <time class="memo-date" t-att-datetime="memo.created_date">
                                            <t t-esc="memo.created_date"/>
                                        </time>
                                        <span class="memo-author"><t t-esc="memo.created_by"/></span>
                                    </div>
                                    <div class="memo-content"><t t-esc="memo.content"/></div>
                                </article>
                            </t>
                        </div>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <!-- Save Button -->
                    <button 
                        type="button"
                        class="btn btn-primary" 
                        t-on-click="saveMemo"
                        t-att-disabled="!state.memoText || state.isSavingMemo"
                    >
                        <t t-if="isKorean()">저장</t>
                        <t t-else="">Save</t>
                    </button>
                    
                    <!-- Close Button -->
                    <button 
                        type="button"
                        class="btn btn-secondary" 
                        t-on-click="closeMemoModal"
                    >
                        <t t-if="isKorean()">닫기</t>
                        <t t-else="">Close</t>
                    </button>
                </div>
            </div>
        </div>
    </t>

</templates>
