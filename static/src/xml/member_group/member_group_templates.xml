<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="golfzon_dashboard.MemberGroupView">
        <div class="golfzon-dashboard-container">
            <!-- Reuse Navigation -->
            <t t-call="golfzon_dashboard.Navigation"/>

            <DashboardLoader isLoading="state.isLoading" />

            <div class="main-content">
                <!-- Reuse Header -->
                <t t-call="golfzon_dashboard.Header"/>

                <!-- Member Group Content -->
                <div class="member-group-content">
                    <!-- Search Form -->
                    <t t-call="golfzon_dashboard.MemberGroup.SearchForm"/>

                    <!-- Group List Table -->
                    <t t-call="golfzon_dashboard.MemberGroup.GroupListTable"/>

                    <!-- Inline Registration Form (Always Visible) -->
                    <t t-call="golfzon_dashboard.RegisterFormInline"/>

                    <!-- Condition-Based Form -->
                    <t t-call="golfzon_dashboard.ConditionBasedForm"/>

                    <!-- âœ… Inquiry Results Display -->
                    <t t-call="golfzon_dashboard.MemberInquiryResults"/>
                </div>
            </div>
        </div>
    </t>
</templates>
