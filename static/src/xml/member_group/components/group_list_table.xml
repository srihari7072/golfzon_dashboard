<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="golfzon_dashboard.MemberGroup.GroupListTable">
        <div class="member-group-list">
            <div class="list-header">
                <h3>Group List</h3>
            </div>

            <div class="table-container">
                <table class="group-table">
                    <thead>
                        <tr>
                            <th t-on-click="() => this.sortTable('division')">
                                division <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortTable('group_name')">
                                Member group name <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortTable('member_count')">
                                Number of members <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortTable('creation_date')">
                                Creation date <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortTable('revision_date')">
                                Date of revision <span class="sort-icon">▼</span>
                            </th>
                            <th class="text-center">Excel Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="state.isLoading">
                            <tr>
                                <td colspan="6" class="text-center loading-cell">Loading...</td>
                            </tr>
                        </t>
                        <t t-elif="!state.memberGroups || state.memberGroups.length === 0">
                            <tr>
                                <td colspan="6" class="text-center">No data found</td>
                            </tr>
                        </t>
                        <t t-else="">
                            <tr t-foreach="state.memberGroups" t-as="group" t-key="group.id">
                                <td><t t-esc="group.division"/></td>
                                <td><t t-esc="group.group_name"/></td>
                                <td><t t-esc="group.member_count"/></td>
                                <td><t t-esc="group.creation_date"/></td>
                                <td><t t-esc="group.revision_date"/></td>
                                <td class="text-center">
                                    <button class="btn-download" 
                                            t-on-click="(ev) => this.downloadExcel(group.group_id || group.id, group.group_name, ev)"
                                            title="Download Excel">
                                        ↓
                                    </button>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>
