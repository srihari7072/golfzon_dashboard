<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="golfzon_dashboard.MemberGroup.MemberList">
        <div class="member-list-section">
            <div class="section-header">
                <h3>Member List</h3>
            </div>

            <div class="member-table-container">
                <table class="member-table">
                    <thead>
                        <tr>
                            <th t-on-click="() => this.sortMemberTable('membership_number')">
                                Membership number
                                <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortMemberTable('name')">
                                name
                                <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortMemberTable('join_date')">
                                Date of joining
                                <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortMemberTable('contact')">
                                contact
                                <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortMemberTable('email')">
                                email
                                <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortMemberTable('residence')">
                                Residence
                                <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortMemberTable('built_in_times')">
                                Number of times built-in
                                <span class="sort-icon">▼</span>
                            </th>
                            <th t-on-click="() => this.sortMemberTable('recent_date')">
                                Recent interior date
                                <span class="sort-icon">▼</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="state.isLoadingMembers">
                            <tr>
                                <td colspan="8" class="text-center loading-cell">
                                    Loading members...
                                </td>
                            </tr>
                        </t>
                        <t t-elif="state.memberList.length === 0">
                            <tr>
                                <td colspan="8" class="text-center">
                                    No members found
                                </td>
                            </tr>
                        </t>
                        <t t-else="">
                            <tr t-foreach="state.memberList" t-as="member" t-key="member.id">
                                <td t-esc="member.membership_number"/>
                                <td t-esc="member.name"/>
                                <td t-esc="member.join_date"/>
                                <td t-esc="member.contact"/>
                                <td t-esc="member.email"/>
                                <td t-esc="member.residence"/>
                                <td t-esc="member.built_in_times"/>
                                <td t-esc="member.recent_date"/>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>
